@model Class

@{
    ViewData["Title"] = "Создание";
    List<Users> teachers = new List<Users>();
    foreach(Users teacher in ViewBag.Users)
    {
        if (teacher.Role.Name == "teacher")
        {
            teachers.Add(teacher);
        }
    }
    ViewBag.Users = teachers;
}

<h1>Создание</h1>

<h4>Класс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="number" asp-for="Name" placeholder="Введите логин" required>
            </div>
            <div class="form-group">
                <label asp-for="Users" class="control-label"></label>
                <select asp-for="Users" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
