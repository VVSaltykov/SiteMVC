@model Class

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Класс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="number" asp-for="Name" placeholder="Введите номер класса" required>
            </div>
            <div class="form-group">
                <select asp-for="UserId" class="list" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
