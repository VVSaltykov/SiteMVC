@model IEnumerable<Users>

@{
    ViewData["Title"] = "Предмет";
}

<h1>Предмет</h1>

<p>
    <a asp-action="Create" , class="btn btn-warning">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" , class="btn btn-warning">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" , class="btn btn-warning">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" , class="btn btn-warning">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
