@model Users

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Ученик</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Account" />
            <input type="hidden" asp-for="Roles" />
            <div class="form-group">
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Class"></select>
            </div>
            <div class="form-group">
                <input type="text" asp-for="FIO" placeholder="Введите имя" required>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Phone" placeholder="Введите телефон" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" , class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>
