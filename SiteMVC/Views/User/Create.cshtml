@model Users

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Ученик</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.Login" class="control-label"></label>
                <select asp-for="Account.Login" class="form-control" placeholder="Выберите аккаунт" asp-items="ViewBag.Account"></select>
            </div>
            <div class="form-group">
                <label asp-for="Roles.Name" class="control-label"></label>
                <select asp-for="Roles.Id" class="form-control" placeholder="Выберите роль" asp-items="ViewBag.Roles"></select>
                <div class="form-group">
                    <label asp-for="ClassId" class="control-label">Номер класса</label>
                    <select asp-for="ClassId" class="form-control" placeholder="Выберите класс" asp-items="ViewBag.Class"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="text" asp-for="FIO" placeholder="Введите имя" required>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Phone" placeholder="Введите телефон" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" , class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
