@model IEnumerable<Account>

@{
    ViewData["Title"] = "УчетнаЗапись";
}

<h1>Учетная запись</h1>

<p>
    <a asp-action="Register" class="btn btn-warning">Создать новую</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

